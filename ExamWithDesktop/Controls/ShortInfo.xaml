<UserControl
    x:Class="ExamWithDesktop.Controls.ShortInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExamWithDesktop.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="250"
    Height="60"
    mc:Ignorable="d">
    <Grid x:Name="UserShortInfoBtn" Height="60">
        <StackPanel
            Width="250"
            Height="60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Ellipse Width="40" Margin="10">
                <Ellipse.Fill>
                    <ImageBrush x:Name="UserImg" ImageSource="https://talabamiz.uz/Images//99daf8ac38de4433aa36a61baf4c9c4d.png" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock
                x:Name="NameTxt"
                VerticalAlignment="Center"
                FontSize="11"
                FontWeight="Bold"
                Foreground="White"
                Text="Username" />
        </StackPanel>
    </Grid>
</UserControl>
